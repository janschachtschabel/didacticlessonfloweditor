  "problem": {
    "problem_description": "Schüler*innen sollen ein Verständnis für die Vielfalt der Ökosysteme und die Auswirkungen des Klimawandels auf diese entwickeln.",
    "learning_goals": [
      "Kenntnis über verschiedene Ökosysteme",
      "Verstehen der Kreisläufe in Ökosystemen",
      "Erkennen der Auswirkungen des Klimawandels auf Ökosysteme",
      "Präsentation der Forschungsergebnisse"
    ],
    "didactic_keywords": [
      "Forschung",
      "Gruppenarbeit",
      "Stationenlernen",
      "Präsentation"
    ]
  },
